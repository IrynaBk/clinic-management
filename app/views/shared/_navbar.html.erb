<nav>
  <ul>
    <% if user_signed_in? %>
      <% if current_user.profile_type == 'Doctor' %>
        <li><%= link_to 'Doctor Profile', doctor_path(current_user.profile) %></li>
      <% elsif current_user.profile_type == 'Patient' %>
        <li><%= link_to 'Patient Profile', patient_path(current_user.profile) %></li>
        <li><%= link_to 'Doctors List', doctors_path %></li>

      <% end %>
      <li><%= link_to 'Appointments', appointments_path %></li>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
    <% else %>
      <li><%= link_to 'Login', new_user_session_path %></li>
      <li><%= link_to 'Sign up', new_user_registration_path %></li>
    <% end %>
  </ul>
</nav>
