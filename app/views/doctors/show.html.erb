<div class="container mx-auto">
  <div class="grid grid-cols-2 gap-4">
    <div>
      <h1 class="text-3xl font-bold mb-4">Doctor Details</h1>

      <div class="bg-white rounded shadow p-4">
        <h5 class="font-bold text-xl mb-2"><%= @doctor.full_name %></h5>
        <p><strong>Email:</strong> <%= @doctor.email %></p>
        <p><strong>Phone:</strong> <%= @doctor.phone %></p>
        <p><strong>Categories:</strong> <%= @doctor.categories.pluck(:title).join(", ") %></p>
      </div>

      <% if can? :create, @appointment %>
        <a href="<%= new_appointment_path(doctor_id: @doctor.id, patient_id: current_user.profile.id) %>"
           class="block bg-blue-500 text-white text-center rounded py-2 px-4 mt-4 hover:bg-blue-600">
          Create Appointment
        </a>
      <% end %>
    </div>

    <div>
      <div class="bg-white rounded shadow">
        <img src="" alt="Doctor Photo" class="w-full">
      </div>
    </div>
  </div>
</div>
