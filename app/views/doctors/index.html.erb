<h1>Doctors</h1>

<%= form_tag(doctors_path, method: "get") do %>
  <%= select_tag(:category_ids, options_for_select(@categories.map { |c| [c.title, c.id] }, params[:category_ids]), multiple: true) %>
  <%= submit_tag("Filter") %>
<% end %>

<% if @doctors.empty? %>
  <p>No doctors found.</p>
<% else %>
  <ul>
    <% @doctors.each do |doctor| %>
      <li><%= link_to doctor.last_name, doctor %></li>
    <% end %>
  </ul>
<% end %>
