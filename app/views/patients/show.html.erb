<section class="patient-profile mt-8">
  <div class="flex justify-center">
    <div class="max-w-xl p-8 sm:flex sm:space-x-6 bg-blue-300 text-white dark:bg-white-900 dark:text-white-100 rounded">
      <div class="flex flex-col space-y-4">
        <div>
          <h2 class="text-2xl font-semibold"><%= @patient.full_name %></h2>
        </div>
        <div class="space-y-1">
          <p><strong>Phone:</strong> <%= @patient.phone %></p>
          <p><strong>Email:</strong> <%= @patient.email %></p>
          <% if can? :manage, Patient %>
    <div class="mt-4">
      <%= link_to 'Edit', edit_patient_path(@patient), class: "text-blue-500 hover:underline mr-4" %>
      <%= link_to 'Delete', patient_path(@patient),  data: { turbo_method: :delete }, class: "text-red-500 hover:underline" %>
    </div>
  <% end %>
        </div>
      </div>
    </div>
  </div>

  
</section>
